generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id              String  @id @default(uuid()) @db.Uuid()
  name            String  
  email           String  @unique
  password        String
  profilepic      String?  
  submissions     Submission[]
}

model Question{
  id              String    @id @default(uuid()) @db.Uuid()
  number          Int       @unique
  name            String
  Time_Limit      String
  Memory_Limit    String
  tag             String
  description     String
  example         String
  constains       String
  testcases       Testcases[]
}

model Submission{
  id                    String @id @default(uuid()) @db.Uuid()
  userId                String @db.Uuid
  Number_of_Submission  Int
  Question_Name         String
  Question_Tag          String
  Take_Time             String
  code_lang             String
  Result                String
  Time                  DateTime @default(now())
  Space_Taken           String
  user                  User @relation(fields: [userId], references: [id])
}

model Testcases{
  id              String @id @default(uuid()) @db.Uuid()
  questionid      String @db.Uuid
  inputvalues     Int[]
  outputAnswer    Int[]
  question        Question @relation(fields: [questionid], references: [id])
}

model Mainterners{
  id              String @id @default(uuid()) @db.Uuid()
  name            String @unique
  email           String @unique
  password        String
  secretcode      String
  CreatedAt       DateTime @default(now())
}